#!/usr/bin/env bash 

echo_title "Installing Node.js"

curl -sL https://raw.githubusercontent.com/creationix/nvm/v0.33.2/install.sh | bash

source $HOME/.nvm/nvm.sh
source $HOME/.bash_profile

if type -t nvm > /dev/null; then
  nvm install 0.12
  nvm install 5
  nvm install 6
  nvm install 7
  nvm alias default 7
  nvm use 6;
  echo_success "nvm & node installed"

else
  echo_fail "nvm not found"
fi  

# Installing global packages
npm install yarn
yarn global add lionelb/subber
yarn global add cloc
yarn global add parker
yarn global add react-native-cli 
yarn global add create-react-app
yarn global add elm

